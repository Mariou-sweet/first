def bimm(height,weigh):
    bim=weigh/height**2
    return bim

height=float(input("输入身高（米）："))
weigh=float(input("输入体重（kg）："))

bim = bimm( height , weigh )
print(f"您的bmi是：{bim:.2f}")

if bim<18.5:
    print('过轻')
elif 18.5<=bim<24.9:
    print('正常')
elif 25<=bim<29.9:
    print('偏重')
else:
    print('肥胖')
